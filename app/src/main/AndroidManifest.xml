<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liam.realfirstdraft">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                //set last line to make it so main activity is not the first activity to launch
                <category android:name="android.intent.category.default" />
            </intent-filter>
        </activity>
        <activity android:name=".Splash">
            <intent-filter>
                //set is as main
                <action android:name="android.intent.action.MAIN" />
                //set the new class as the firs thing to open
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SheetMusic"
            android:label="@string/title_activity_sheet_music"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MusicPage"
            android:label="@string/title_activity_music_page"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".RecorderPage"
            android:label="@string/title_activity_recorder_page"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MusicPlayer"
            android:label="@string/title_activity_music_player"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".AudioRecordPages"
            android:label="@string/title_activity_audio_recorder_page"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
